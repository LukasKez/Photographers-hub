{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_4_horizontal_layout.html.twig' %}

{% block body %}
    <h1 class="main-header dark-text">Contact form</h1>
    <div id="grad1"></div>
{{ form_start(form) }}
    <div class="form-group">
        <div class="row mb-3">
            <div class="col col-2 col-xl-1">
                {{ form_label(form.name) }}
            </div>
            <div class="col col-4 col-xl-5">
                {{ form_widget(form.name) }}
            </div>
            <div class="col col-2 col-xl-1">
                {{ form_label(form.email) }}
            </div>
            <div class="col col-4 col-xl-5">
                {{ form_widget(form.email) }}
            </div>
        </div>
        <div class="row mb-3">
            <div class="col col-2 col-xl-1">
                {{ form_label(form.subject) }}
            </div>
            <div class="col col-10 col-xl-11">
                {{ form_widget(form.subject) }}
            </div>
        </div>
        <div class="row mb-3">
            <div class="col col-2 col-xl-1">
                {{ form_label(form.message) }}
            </div>
            <div class="col col-10 col-xl-11">
                {{ form_widget(form.message, {'attr':{'rows':'10'}}) }}
            </div>
        </div>
        <div class="row mb-3">
            <div class="col col-2 col-xl-1"></div>
            <div class="col col-10 col-xl-11">
                <input type="submit" value="Send" class="btn btn-primary"/>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
