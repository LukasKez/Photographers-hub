{% extends "base.html.twig" %}

{% block body %}
	<div class="row my-3">
		<div class="col-5 " style="font-size:24px">
			Author:
			<a href="{{ path('app_userProfile', {'userName':user.username}) }}" class="dark-text">{{user.username}}</a>
		</div>
		<div class="col-5">
			<a href="{{ path('app_userGallery', {'username':user.username}) }}" class="btn btn-primary">Visit gallery</a>
		</div>
		<div class="col-2">
        {% if app.user and (app.user == user or is_granted('ROLE_ADMIN')) %}
			<a href="{{ path('app_deletePhoto', {'imageName':image.name}) }}" class="btn btn-danger js-delete-btn">Delete</a>
        {% endif %}
		</div>
	</div>

	<div class="text-center">
		<img src="{{ asset('uploads/gallery/' ~ image.name) }}" class="rounded my-1 mx-1 center-fit ">
	</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function () {
            $('.js-delete-btn').on('click', function (e) {
                //let username = $(this).parent().siblings('td')[0].innerHTML;
                return confirm('Are you sure you would like to delete this photo?');
            });
        });
    </script>
{% endblock %}